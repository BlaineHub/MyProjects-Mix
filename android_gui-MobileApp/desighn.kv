<RootWidget>:
    LoginScreen:
        name: 'login_screen'
    SignUpScreen:
        name: 'sign_up_screen'
    SignUpScreenSuccess:
        name: 'sign_up_screen_success'
    LoginScreenSuccess:
        name: 'login_screen_success'
    ForgotPasswordScreen:
        name: 'forgot_password_screen'

<LoginScreen>:
    GridLayout:
        cols: 1
        GridLayout:
            cols:1
            padding: 15,15
            spacing: 20,20
            Label:
                text: "User Login"
                font_size: '30sp'
            TextInput:
                id: username
                hint_text: 'Username'
                font_size: '20sp'
            TextInput:
                id: password
                password: True
                hint_text: 'Password'
                font_size: '20sp'
            RelativeLayout:
                Button:
                    text: "Login"
                    on_press: root.login(root.ids.username.text,root.ids.password.text)
                    size_hint: 0.3,0.5
                    pos_hint: {'center_x':0.5,'center_y':0.5}
            Label:
                id: loginwrong
                text: ''

        GridLayout:
            cols: 2
            size_hint: 0.2,0.2
            padding: 10,10
            spacing: 20,20
            Button:
                text:"Forgot Password"
                background_color: 1,1,1,0
                on_press: root.forgot_pass()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7,1,1
            Button:
                text: "Sign Up"
                background_color: 1,1,1,0
                on_press: root.sign_up()
                opacity: 1 if self.state == 'normal' else 0.5
                color: 0.1,0.7,1,1
<SignUpScreen>:
    GridLayout:
        cols:1
        padding: 15,15
        spacing: 20,20
        size_hint: 1,0.8
        Label:
            text: "Sign Up For Inspiration"
            font_size: '30sp'
        TextInput:
            id: username
            hint_text: 'Username'
            font_size: '20sp'
        TextInput:
            id: password
            password: True
            hint_text: 'Password'
            font_size: '20sp'

        RelativeLayout:
            Button:
                text: 'Submit'
                on_press: root.add_user(root.ids.username.text,root.ids.password.text)
                size_hint: 0.3,0.5
                pos_hint: {'center_x':0.5,'center_y':0.5}

<SignUpScreenSuccess>:
    GridLayout:
        cols:1
        padding: 15,15
        spacing: 20,20
        Label:
            text: 'Success, Wahoo!!'
            font_size: '50sp'
            color: 0,1,0,1
        RelativeLayout:
            Button:
                text: 'Login Page'
                on_press: root.login()
                size_hint: 0.3,0.2
                pos_hint: {'center_x':0.5,'center_y':0.5}

<LoginScreenSuccess>:

    GridLayout:
        cols:1
        padding: 15,15
        spacing: 20,20
        RelativeLayout:
            ImageButton:
                on_press: root.log_out()
                source: 'logout_hover.png' if self.hovered else 'logout_nothover.png'
                size_hint: 0.35,0.35
                pos_hint: {'center_x':0.95,'center_y':0.8}
        Label:
            text:'How do you feel?'
        TextInput:
            id: feeling
            hint_text: 'Things to try: Happy, Sad, Unloved'
        Button:
            text: 'Enlighten Me'
            on_press: root.get_quote(root.ids.feeling.text)
        ScrollView:
            Label:
                id: quote
                text: ''
                text_size: self.width, None
                size_hint_y: None
                height: self.texture_size[1]
    
<ForgotPasswordScreen>:
    GridLayout:
        cols:1
        padding: 15,15
        spacing: 20,20
        Label:
            hint_text: ''
        TextInput:
            id: username
            hint_text: 'Enter Your Username'
            size_hint: 0.5,0.5
            font_size: '20sp'
        RelativeLayout:
            Button:
                text: 'Retrieve Password'
                on_press: root.password_retrieval(root.ids.username.text)
                size_hint: 0.3,0.3
                pos_hint: {'center_x':0.3,'center_y':0.5}
            Button:
                text: 'Return Login Page'
                on_press: root.login()
                size_hint: 0.3,0.3
                pos_hint: {'center_x':0.7,'center_y':0.5}
        Label:
            id: password_show
            hint_text: ''
            font_size: '30sp'
            color: 1,0,0,1

    


